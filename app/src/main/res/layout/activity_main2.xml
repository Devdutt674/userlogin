<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FreelancingHub"
            android:textColor="#4B54E8"
            android:textSize="32sp"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:layout_marginBottom="32dp" />


        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="32dp" />


        <LinearLayout
            android:id="@+id/tabButtonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/btnUser"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="User"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btnAdmin"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Admin"
                android:textColor="#808080"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#2E2E2E"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your email"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />


        <TextView
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="14sp"
            android:textColor="#2E2E2E"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />


        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your password"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#A0A0A0"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#4B54E8"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif"/>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Log In"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4B54E8"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAdminLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Admin Log In"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4B54E8"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="32dp" />






        <LinearLayout
            android:id="@+id/dividerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or continue with"
                android:textColor="#A0A0A0"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:fontFamily="sans-serif" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D3D3D3" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/socialButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:weightSum="3">


            <ImageView
                android:id="@+id/btnGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/google"
                android:text=""
                android:padding="8dp" />


            <ImageView
                android:id="@+id/btnApple"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/logi"
                android:text=""
                android:padding="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />


            <ImageView
                android:id="@+id/btnFacebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/facebook"
                android:drawableTop="@drawable/free"
                android:text=""
                android:padding="8dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/noAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#4B4B4B"
                android:textSize="14sp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign Up"
                android:textColor="#4B54E8"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
